<Window x:Class="Halal.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:views="clr-namespace:Halal.GUI.Views"
        xmlns:local="clr-namespace:Halal.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <views:FunctionApproximationView x:Name="FAV1" Grid.Column="0" Grid.Row="0"/>
        <views:FunctionApproximationView x:Name="FAV2" Grid.Column="1" Grid.Row="0"/>
        <views:FunctionApproximationView x:Name="FAV3" Grid.Column="0" Grid.Row="1"/>
        <views:FunctionApproximationView x:Name="FAV4" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
